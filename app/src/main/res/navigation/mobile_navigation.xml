<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mobile_navigation"
	app:startDestination="@+id/navigation_today">

	<fragment
		android:id="@+id/navigation_today"
		android:name="za.co.digitalhustlers.weatherapp.ui.current.CurrentWeatherFragment"
		android:label="@string/title_today"
		tools:layout="@layout/current_weather_fragment" />

	<fragment
		android:id="@+id/navigation_this_week"
		android:name="za.co.digitalhustlers.weatherapp.ui.dashboard.DashboardFragment"
		android:label="@string/title_this_week"
		tools:layout="@layout/fragment_dashboard" />

	<fragment
		android:id="@+id/navigation_settings"
		android:name="za.co.digitalhustlers.weatherapp.ui.settings.SettingsFragment"
		android:label="@string/title_settings"
		tools:layout="@layout/fragment_notifications" />
